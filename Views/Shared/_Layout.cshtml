
@inject CmsModern.Data.CmsDbContext Db
@{
    var s = Db.WebsiteSettings.OrderBy(x => x.Id).FirstOrDefault();
    var headerBg = s?.HeaderBg ?? "#f8f9fa";
    var headerTextColor = s?.HeaderTextColor ?? "#000000";
    var menuBg = s?.MenuBg ?? "#f8f9fa";
    var menuTextColor = s?.MenuTextColor ?? "#000000";
    var menuAlignment = (s?.MenuAlignment ?? "left").ToLowerInvariant();
    var menuAlignmentClass = menuAlignment == "center" ? "mx-auto" : menuAlignment == "right" ? "ms-auto" : "";
    var menuAlignmentStyle = menuAlignment == "left" ? "margin-left: 100px;" : string.Empty;
    var siteBg = s?.SiteBg ?? "#ffffff";
    var siteTextColor = s?.SiteTextColor ?? "#333333";
    var footerBg = s?.FooterBg ?? "#f8f9fa";
    var footerTextColor = s?.FooterTextColor ?? "#000000";
    var siteTitle = string.IsNullOrWhiteSpace(s?.SiteTitle) ? "CMS MODERN" : s.SiteTitle;
    var pages = Db.Pages.ToList();
    var isAdminPage = Context.Request.Path.StartsWithSegments("/admin");
}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["GoogleTitle"] ?? ViewData["Title"]) - @siteTitle</title>
    <meta name="description" content="@(ViewData["GoogleDescription"] ?? "")" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @if (!string.IsNullOrEmpty(s?.LogoPath))
    {
        <link rel="icon" type="image/x-icon" href="@s.LogoPath" />
    }
</head>
<body style="min-height: 100vh; display: flex; flex-direction: column; padding-top: 56px; background-color: @siteBg; color: @siteTextColor; font-size: @(s?.FontWebsiteText.HasValue == true ? s.FontWebsiteText.Value + "px" : "inherit"); overflow-y: scroll; overflow-x: hidden;">
    <style>
        h1, .display-1 { font-size: @(s?.FontPageTitle.HasValue == true ? s.FontPageTitle.Value + "px" : "inherit") }
        h2, .display-2 { font-size: @(s?.FontAlineaTitle.HasValue == true ? s.FontAlineaTitle.Value + "px" : "inherit") }
        .navbar-nav .nav-link { color: @menuTextColor !important; font-family: 'Juna', sans-serif; font-size: calc(1em + 2px); border-bottom: 2px transparent solid; padding-bottom: 0px; }
        .navbar-nav .nav-link:hover { border-bottom-color: rgba(0, 0, 0, 0.3); }
        .navbar-nav { background-color: @menuBg; border-radius: 5px; padding: 0 10px; }
        @@media (min-width: 992px) {
            .navbar-nav { gap: 25px; }
        }
        .navbar { min-height: 56px; overflow: visible; }
        .navbar-brand {
            position: relative;
            overflow: visible;
            height: 56px;
            padding-top: 0;
            padding-bottom: 0;
        }
        .navbar-brand .brand-logo {
            position: absolute;
            bottom: -22px; /* allow the logo to hang below the header */
            left: 0;
        }
        .main-container { padding-top: 0; }
        .navbar .admin-nav {
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            margin-right: 0;
            padding-right: 0;
        }
        @@media (max-width: 991.98px) {
            .navbar .admin-nav {
                position: static;
                transform: none;
            }
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: @headerBg; color: @headerTextColor; border-bottom: 2px rgba(0, 0, 0, 0.3) solid;">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/" style="color: @headerTextColor !important;">
                @if (!string.IsNullOrEmpty(s?.LogoPath))
                {
                    <img src="@s.LogoPath" alt="@siteTitle" class="brand-logo" style="width: 80px; height: 80px; object-fit: contain;" />
                }
                else
                {
                    @siteTitle
                }
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav @menuAlignmentClass" style="@menuAlignmentStyle flex-grow: 0;">
                    @foreach (var p in pages.OrderBy(x => x.DisplayOrder).ThenBy(x => x.Id))
                    {
                        var isActive = Context.Request.Path == "/Home/Page/" + p.Id;
                        var menuText = !string.IsNullOrWhiteSpace(p.MenuItem) ? p.MenuItem : p.Title;
                        var hasIcon = !string.IsNullOrWhiteSpace(p.MenuIcon);
                        <li class="nav-item @(isActive ? "active" : "")">
                            <a class="nav-link" href="/Home/Page/@p.Id" @(hasIcon ? $"title={menuText}" : "")>
                                @if (hasIcon)
                                {
                                    <i class="@p.MenuIcon"></i>
                                }
                                else
                                {
                                    @menuText.ToUpper()
                                }
                            </a>
                        </li>
                    }
                </ul>
                @if (User.Identity.IsAuthenticated && User.Claims.Any(c => c.Type == "IsAdmin" && c.Value == "True"))
                {
                    <ul class="navbar-nav admin-nav">
                        <li class="nav-item @(Context.Request.Path.Value.StartsWith("/admin") ? "active" : "")">
                            <a class="nav-link" href="/admin">ADMIN</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="/Account/Logout" class="d-flex align-items-center m-0 me-3">
                                <button type="submit" class="nav-link px-2 py-2" style="border: none; background: none;">LOGOUT</button>
                            </form>
                        </li>
                    </ul>
                }
            </div>
        </div>
        @if (isAdminPage)
        {
            <div style="background-color: #f2f2f2;border-bottom: solid 2px #b2b2b2;padding: 0 1rem;width: 100vw;margin-top: 106px;position: fixed !important;color: #555555;height: 30px;align-content: center;z-index: -1;">
                <ul class="nav ms-auto mb-0" style="gap: 25px;float: right;margin-right: 10px;">
                    <li class="nav-item">
                        <a class="nav-link p-0" href="/admin">Website pagina's</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-0" href="/admin/Users">Website users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-0" href="/admin/Settings">Website instellingen</a>
                    </li>
                </ul>
            </div>
        }      
    </nav>
    <main style="flex: 1; padding-top: @(ViewBag.HasBanner == true ? "16px" : "50px");">
        <div class="container main-container @(isAdminPage ? "admin-main-container" : "")">
            @RenderBody()
        </div>
    </main>
    <style>
        footer .footer-col p { margin: 0.25rem 0; line-height: 1.3; }
        footer .footer-col { line-height: 1.3; }
    </style>
    <footer style="background-color: @footerBg; color: @footerTextColor; padding: 30px 0; border-top: 2px rgba(0, 0, 0, 0.3) solid;">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-3 footer-col">
                    @Html.Raw(s?.FooterContact ?? "")
                </div>
                <div class="col-12 col-md-3 footer-col">
                    @Html.Raw(s?.FooterOpeningHours ?? "")
                </div>
                <div class="col-12 col-md-3 footer-col">
                </div>
                <div class="col-12 col-md-3 footer-col">
                    @Html.Raw(s?.FooterSocial ?? "")
                </div>
            </div>
            <div class="text-center mt-3">
                <small>&copy; 2026 @siteTitle. All rights reserved.</small>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss Bootstrap alerts after X ms (default: 5000)
        document.addEventListener('DOMContentLoaded', function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function (alert) {
                // Opt-out per alert by adding class 'no-auto-dismiss'
                if (alert.classList.contains('no-auto-dismiss')) return;

                const timeout = parseInt(alert.getAttribute('data-timeout') || '5000', 10);
                if (isNaN(timeout) || timeout <= 0) return;

                window.setTimeout(function () {
                    try {
                        if (window.bootstrap && typeof window.bootstrap.Alert === 'function') {
                            const bsAlert = new window.bootstrap.Alert(alert);
                            bsAlert.close();
                            return;
                        }
                    } catch (e) {
                        // fallthrough to manual fade
                    }

                    // Fallback: manual fade-out then remove
                    alert.style.transition = alert.style.transition || 'opacity .5s ease';
                    alert.style.opacity = '0';
                    window.setTimeout(function () {
                        if (alert && alert.parentNode) {
                            alert.parentNode.removeChild(alert);
                        }
                    }, 550);
                }, timeout);
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
