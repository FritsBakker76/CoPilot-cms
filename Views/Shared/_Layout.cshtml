
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CmsModern</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="min-height: 100vh; display: flex; flex-direction: column; padding-top: 56px;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">CMS MODERN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav" style="margin-left: 100px;">
                    <li class="nav-item @(Context.Request.Path == "/Home/Page/1" ? "active" : "")">
                        <a class="nav-link" href="/Home/Page/1">WELCOME</a>
                    </li>
                    <li class="nav-item @(Context.Request.Path == "/Home/Page/2" ? "active" : "")">
                        <a class="nav-link" href="/Home/Page/2">CONTACT</a>
                    </li>
                    <li class="nav-item @(Context.Request.Path == "/Home/Page/3" ? "active" : "")">
                        <a class="nav-link" href="/Home/Page/3">NEWS</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated && User.Claims.Any(c => c.Type == "IsAdmin" && c.Value == "True"))
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item @(Context.Request.Path.Value.StartsWith("/admin") ? "active" : "")">
                            <a class="nav-link" href="/admin">ADMIN</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="/Account/Logout" class="d-flex align-items-center m-0">
                                <button type="submit" class="nav-link px-2 py-2" style="border: none; background: none;">LOGOUT</button>
                            </form>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <main style="flex: 1;">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer style="height: 200px; background-color: #f8f9fa; text-align: center; padding: 20px;">
        <p>&copy; 2026 CmsModern. All rights reserved.</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
