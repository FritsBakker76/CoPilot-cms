@model CmsModern.Models.Page
@{
    ViewData["Title"] = Model.Title;
    ViewData["GoogleTitle"] = Model.GoogleTitle;
    ViewData["GoogleDescription"] = Model.GoogleDescription;
    var contents = ViewBag.Contents as List<CmsModern.Models.PageContent>;
    var isAdmin = User.Identity.IsAuthenticated && User.Claims.Any(c => c.Type == "IsAdmin" && c.Value == "True");
    var hasBanner = !string.IsNullOrEmpty(Model.BannerPath);
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="page-banner-wrapper @(hasBanner ? "banner-has-image" : "banner-empty")">
    @if (hasBanner)
    {
        <img src="@Model.BannerPath" alt="Page banner" class="page-banner-image" />
    }
    @if (isAdmin)
    {
        <button type="button" class="btn btn-light btn-sm banner-upload-btn" data-bs-toggle="modal" data-bs-target="#bannerUploadModal" aria-label="Banner uploaden">
            üì∑
