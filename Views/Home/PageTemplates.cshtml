                @Html.AntiForgeryToken()
                <input type="hidden" name="pageId" value="@pageId" />
                <input type="hidden" name="type" value="alinea#4" />
                <input type="hidden" name="position" value="@position" />
            </form>
            <div class="template border p-3 template-card" data-template="alinea#4" style="font-size: 0.85rem;">
                <h4 style="font-size: 1rem; margin-bottom: 0.5rem;">Alinea #4 (zonder titel)</h4>
                <div class="row">
                    <div class="col-12"><div class="border p-2 bg-light" style="height: 80px; font-size: 0.8rem; overflow: hidden;">Hier wordt in tekst van de alinea weergegeven. Deze alinea is schermvullend</div></div>
                </div>
            </div>
        </div>
        <div class="col-4 mb-4">
            <form method="post" action="@Url.Action("AddContent", "Home")" class="template-form" style="display: none;">
