    </div>
    <div style="height: 80px;"></div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.template-card').on('click', function () {
                var form = $(this).prev('form.template-form');
                if (form.length > 0) {
                    form.submit();
                }
            });
        });
    </script>
}