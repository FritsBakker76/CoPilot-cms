@{
    ViewData["Title"] = "Page Templates";
    var pageId = ViewBag.PageId;
    var position = ViewBag.Position ?? "bottom";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-5">
    <h2 class="mb-0">Selecteer een alinea template</h2>
    <a href="@Url.Action("Page", "Home", new { id = pageId, edit = true })" class="btn btn-outline-secondary">Annuleren</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-4 mb-4">
            <form method="post" action="@Url.Action("AddContent", "Home")" class="template-form" style="display: none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="pageId" value="@pageId" />
                <input type="hidden" name="type" value="alinea#1" />
                <input type="hidden" name="position" value="@position" />
            </form>
            <div class="template border p-3 template-card" data-template="alinea#1" style="font-size: 0.85rem;">
                <h4 style="font-size: 1rem; margin-bottom: 0.5rem;">Alinea #1</h4>
                <div class="row">
                    <div class="col-12 mb-2"><div class="border p-2 bg-light" style="min-height: 30px; font-size: 0.8rem;">Hier wordt de titel van de alinea weergegeven</div></div>
                    <div class="col-12"><div class="border p-2 bg-light" style="height: 80px; font-size: 0.8rem; overflow: hidden;">Hier wordt in tekst van de alinea weergegeven. Deze alinea is schermvullend</div></div>
                </div>
            </div>
        </div>
        <div class="col-4 mb-4">
            <form method="post" action="@Url.Action("AddContent", "Home")" class="template-form" style="display: none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="pageId" value="@pageId" />
                <input type="hidden" name="type" value="alinea#2" />
                <input type="hidden" name="position" value="@position" />
            </form>
            <div class="template border p-3 template-card" data-template="alinea#2" style="font-size: 0.85rem;">
                <h4 style="font-size: 1rem; margin-bottom: 0.5rem;">Alinea #2</h4>
                <div class="mb-2"><div class="border p-2 bg-light" style="min-height: 30px; font-size: 0.8rem;">Hier wordt de titel van de alinea weergegeven</div></div>
                <div class="alinea-image-right" style="gap: 0.5rem;">
                    <div class="text-content"><div class="border p-2 bg-light" style="min-height: 80px; font-size: 0.8rem; overflow: hidden;">Hier wordt in tekst van de alinea weergegeven met aan de rechterkant van de tekst een afbeeldingen slideshow.</div></div>
                    <div class="image-wrapper" style="width: 60px; flex-shrink: 0;"><img src="/images/placeholder.png" class="border" style="width: 100%; height: auto; display: block; border-radius: 8px;" alt="Placeholder" /></div>
                </div>
            </div>
        </div>
        <div class="col-4 mb-4">
            <form method="post" action="@Url.Action("AddContent", "Home")" class="template-form" style="display: none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="pageId" value="@pageId" />
