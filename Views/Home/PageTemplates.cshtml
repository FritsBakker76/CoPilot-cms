@{
    ViewData["Title"] = "Page Templates";
    var pageId = ViewBag.PageId;
}

<h2>Select a Template</h2>

<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="template border p-3" data-type="alinea#1" style="cursor: pointer;">
                <h4>Alinea #1</h4>
                <div class="row">
                    <div class="col-12 mb-3"><div class="border p-2 bg-light" style="min-height: 40px;">Hier wordt de titel van de alinea weergegeven</div></div>
                    <div class="col-12"><div class="border p-2 bg-light" style="height: 160px;">Hier wordt in tekst van de alinea weergegeven.</div></div>
                </div>
            </div>
        </div>
        <div class="col-12 mb-4">
            <div class="template border p-3" data-type="alinea#2" style="cursor: pointer;">
                <h4>Alinea #2</h4>
                <div class="row">
                    <div class="col-12 mb-3"><div class="border p-2 bg-light" style="min-height: 40px;">Hier wordt de titel van de alinea weergegeven</div></div>
                    <div class="row">
                        <div class="col-9 mb-3"><div class="border p-2 bg-light" style="min-height: 160px;">Hier wordt in tekst van de alinea weergegeven.</div></div>
                        <div class="col-3"><img src="/images/placeholder.jpg" class="img-fluid border" style="min-height: 160px; object-fit: contain;" alt="Placeholder" /></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 mb-4">
            <div class="template border p-3" data-type="alinea#3" style="cursor: pointer;">
                <h4>Alinea #3</h4>
                <div class="row">
                    <div class="col-12 mb-3"><div class="border p-2 bg-light" style="min-height: 40px;">Hier wordt de titel van de alinea weergegeven</div></div>
                    <div class="row">
                        <div class="col-3 mb-3"><img src="/images/placeholder.jpg" class="img-fluid border" style="min-height: 160px; object-fit: contain;" alt="Placeholder" /></div>
                        <div class="col-9"><div class="border p-2 bg-light" style="min-height: 160px;">Hier wordt in tekst van de alinea weergegeven.</div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form method="post" action="@Url.Action("AddContent", "Home")">
    @Html.AntiForgeryToken()
    <input type="hidden" name="pageId" value="@pageId" />
    <input type="hidden" name="type" id="selectedType" />
    <div class="text-center">
        <button type="submit" id="addBtn" class="btn btn-success" disabled>Alinea toevoegen</button>
        <a href="@Url.Action("Page", "Home", new { id = pageId, edit = true })" class="btn btn-secondary">Annuleren</a>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.template').click(function() {
                $('.template').removeClass('selected').css({'border-color': '', 'background-color': ''});
                $(this).addClass('selected').css({'border-color': 'blue', 'background-color': 'lightblue'});
                $('#selectedType').val($(this).data('type'));
                $('#addBtn').prop('disabled', false);
            });
        });
    </script>
}