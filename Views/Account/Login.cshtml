@model dynamic
@{
    ViewData["Title"] = "Login";
}

<div class="login-page d-flex align-items-center justify-content-center">
    <div class="card shadow-sm login-card w-100">
        <div class="card-body">
            <h1 class="h4 mb-4 text-center">Login</h1>
            <form asp-action="Login" method="post" class="login-form">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control form-control-lg" id="username" name="username" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control form-control-lg" id="password" name="password" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                </div>
            </form>
            @if (ViewData.ModelState.ContainsKey(""))
            {
                <div class="alert alert-danger mt-3">
                    @ViewData.ModelState[""].Errors.First().ErrorMessage
                </div>
            }
        </div>
    </div>
</div>